<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.imagemanager6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView 
		android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    <LinearLayout
        android:id="@+id/anim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/chunbai"
        android:focusable="true"
		android:focusableInTouchMode="true"
        android:orientation="vertical" >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
         	android:layout_marginLeft="5dp"
         	android:layout_marginRight="2dp"
         	android:text="@string/change_pass_warn"
        	android:textColor="@color/red"
         	android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="用户名"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/regitername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="请输入用户名"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="性别"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/regitersex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="请选择性别"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="生日"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/regiterbirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="请选择出生年月"
            android:focusableInTouchMode="false"
            android:editable="false"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="用户类型"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp"
            android:visibility="gone" />
        <EditText
            android:id="@+id/regitertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="请选择用户类型"
            android:focusableInTouchMode="false"
            android:editable="false"
            android:singleLine="true"
            android:visibility="gone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="密码"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/regiterpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="请输入密码"
            android:maxLines="1"
            android:inputType="textPassword"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="确认密码"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/regiterpassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />
        <wyy.widget.dd.CircularProgressButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/chunbai"
            android:textSize="18sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textIdle="注册" />
     </LinearLayout>
     
	</ScrollView>
</LinearLayout>
