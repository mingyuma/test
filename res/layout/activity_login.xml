<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.imagemanager6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <ImageView
        android:id="@+id/anim_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:src="@drawable/loginbackground" />

    <LinearLayout
        android:id="@+id/anim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/chunbai"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/identity_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="患者"
                android:textColor="@color/chunbai" />

            <Button
                android:id="@+id/identity_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/qianhuise"
                android:text="实习医师"
                android:textColor="@color/chunbai" />

            <Button
                android:id="@+id/identity_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/qianhuise"
                android:text="主任医师"
                android:textColor="@color/chunbai" />

            <Button
                android:id="@+id/identity_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/qianhuise"
                android:text="管理医师"
                android:textColor="@color/chunbai" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red" />

        <EditText
            android:id="@+id/loginname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/icon_blacklist_setting"
            android:hint="请输入用户名"
            android:singleLine="true" />

        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/icon_code_lock_setting"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <wyy.widget.dd.CircularProgressButton
            android:id="@+id/btnWithText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@color/chunbai"
            android:textSize="18sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="登录成功"
            app:cpb_textError="错误"
            app:cpb_textIdle="登录" />
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/passenger_login"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="游客登录"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="注册账号"
            android:textColor="@color/cpb_blue_dark"
            android:textSize="20sp"
             />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>